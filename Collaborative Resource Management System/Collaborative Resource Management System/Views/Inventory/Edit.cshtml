@model Collaborative_Resource_Management_System.Models.InventoryItem

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Edit Inventory</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>

    <div class="container">
        <h1 class="mt-4 mb-4">Edit Inventory Item</h1>
        <form action="/Inventory/Edit" method="POST" id="editForm">
            <input type="hidden" asp-for="InventoryItemID" />

            <div class="form-group">
                <label asp-for="Name"></label>
                <input class="form-control" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input class="form-control" asp-for="Description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoomNumber"></label>
                <input type="number" class="form-control" asp-for="RoomNumber" />
                <span asp-validation-for="RoomNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryID"></label>
                <input type="number" class="form-control" asp-for="CategoryID" />
                <span asp-validation-for="CategoryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GeneralLedger"></label>
                <input class="form-control" asp-for="GeneralLedger" />
                <span asp-validation-for="GeneralLedger" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comments"></label>
                <textarea class="form-control" asp-for="Comments"></textarea>
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>

            @if (Model is Collaborative_Resource_Management_System.Models.Consumable consumable)
            {
                <div class="form-group">
                    <label asp-for="@consumable.PricePerUnit">Price per Unit</label>
                    <input type="number" step="0.01" class="form-control" asp-for="@consumable.PricePerUnit" />
                    <span asp-validation-for="@consumable.PricePerUnit" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@consumable.QuantityAvailable">Quantity Available</label>
                    <input type="number" class="form-control" asp-for="@consumable.QuantityAvailable" />
                    <span asp-validation-for="@consumable.QuantityAvailable" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@consumable.MinimumQuantity">Minimum Quantity</label>
                    <input type="number" class="form-control" asp-for="@consumable.MinimumQuantity" />
                    <span asp-validation-for="@consumable.MinimumQuantity" class="text-danger"></span>
                </div>
            }

            @if (Model is Collaborative_Resource_Management_System.Models.NonConsumable nonConsumable)
            {
                <div class="form-group">
                    <label asp-for="@nonConsumable.AssetTag">Asset Tag</label>
                    <input class="form-control" asp-for="@nonConsumable.AssetTag" />
                    <span asp-validation-for="@nonConsumable.AssetTag" class="text-danger"></span>
                </div>
            }

            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
