<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/BootStyle.css" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }
        
        .wrapper {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .headerC {
            color: rgb(23,75,124)
        }

        .head {
            color: white;
        }

        .footer {
            background-color: rgb(23,75,124);
            padding: 10px 0;
            margin-top: auto;
        }

        .navbar {
            background-color: rgb(23,75,124);
        }
    </style>
</head>
<body>
    <div class="wrapper">
    <header>

        <div>
            <nav class="navbar">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="@Url.Content("~/img/HopeHaven_CMYK Logo.jpg")" height="65" width="125">
                </a>
                <h1 class="head">Collaborative Resource Management System</h1><h1>
                    <a class="button btn-info btn-lg" href="@Url.Action("Index", "Home")">Logout</a>
                </h1>
            </nav>
        </div>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    </div>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>



    <div class="footer fixed-bottom text-center">
        <p class="head">&copy; 2023 HOPE HAVEN CRMS. All rights reserved.</p>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
