</div>

<script>
    let pin = '';
    const pinInput = document.getElementById('pin-input');

    function appendPin(number) {
        if (pin.length < 6) {
            pin += number;
            pinInput.value = pin;
        }

        if (pin.length === 6) {
           
            submitPin();
        }
    }

    function deleteDigit() {
        if (pin.length > 0) {
            pin = pin.slice(0, -1);
            pinInput.value = pin; 
        }
    }

    function clearPin() {
        pin = '';
        pinInput.value = '';
    }

